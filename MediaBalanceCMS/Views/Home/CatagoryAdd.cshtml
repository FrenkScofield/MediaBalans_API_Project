
@{
    ViewData["Title"] = "CatagoryAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="position: absolute; margin-top: 160px;">

    <a asp-action="CatagoryAdd"  class="btn btn-warning" style=" margin-bottom: 20px; margin-left: 20px;">Catagory</a><br />
    <a asp-action="ProductAdd"  class="btn btn-warning" style=" margin-bottom: 20px; margin-left: 20px;">Product</a>
</div>

<div class="container">
    <div class=" justify-content-center h-100">
        <h1 class="indexTitle" style="margin-bottom: 50px;">Category Add</h1>

        <div class="card" style=" height: 188px; width: 400px; margin-left: 32%;">
            <div class="card-body">
                <a asp-action="ProductIndex" class="btn btn-secondary" style="margin-bottom:10px; float:right">Back to Index</a>

                <form asp-action="CatagoryAdd" method="post">
                    <div class="input-group form-group">

                        <input type="text" name="Name" class="form-control" placeholder="Catagory Name">

                    </div>


                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-success float-right ">
                    </div>
                </form>
            </div>

        </div>
    </div>

</div>

