@model MediaBalanceCMS.Models.VM.ProductCatagoryVM

@{
    ViewData["Title"] = "ProductIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <title>Login Page</title>
    <!--Made with love by Mutiullah Samim -->
    <!--Bootsrap 4 CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <!--Custom styles-->
    <link rel="stylesheet" type="text/css" href="styles.css">
</head>
<div style="position: absolute; margin-top: 160px;">

    <a asp-action="CatagoryAdd" class="btn btn-warning" style=" margin-bottom: 20px; margin-left: 20px;">Catagory</a><br />
    <a asp-action="ProductAdd" class="btn btn-warning" style=" margin-bottom: 20px; margin-left: 20px;">Product</a>
</div>

<div class="container">
    <a asp-action="Index" class="btn btn-secondary" style="margin-bottom:10px; float:right">Log Out</a>

    <div class="justify-content-center h-100" style="padding-top: 60px;">
        <h1 class="indexTitle" style="margin-bottom: 50px;">ALL SKYLINE PRODUCTS</h1>

        <div class="card" style=" height: 488px; margin: 0px 110px; ">
            <div class="card-body">
                <table class="table table-striped" style="color: white;">
                    <thead>
                        <tr>
                            <th class="tableNmae" scope="col">Category</th>
                            <th class="tableNmae" scope="col">Name</th>
                            <th class="tableNmae" scope="col">Price</th>
                            <th class="tableNmae" scope="col">Color</th>
                            <th class="tableNmae" scope="col">Whiting</th>
                            <th class="tableNmae" scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ProductVMs)
                        {

                        <tr data-id="@item.Id">
                            <td>@item.CategoryName</td>
                            <td>@item.Name</td>
                            <td>@item.Price $</td>
                            <td>@item.Color</td>
                            <td>@item.Whiting kq</td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"  onclick="return confirm('Are you sure you want to delete?')"><i class="fas fa-fw fa-trash"></i></a>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>

            @if (ViewBag.Modal == 3)
            {
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="alert alert-success" role="alert">
                            Succeed Added
                        </div>
                    </div>
                </div>
                <button id="btn-exampleModalCenter" class="btn d-none" data-toggle="modal" data-target="#exampleModalCenter"></button>

            }
        </div>



    </div>

</div>

@section scripts{
    <script src="/vendor/jquery/jquery.min.js"></script>

    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
    <script>

        $('#btn-exampleModalCenter').trigger('click');

        setTimeout(() => {
            $("#exampleModalCenter").modal('hide');
        }, 1500);

        window.dataLayer = window.dataLayer || [];
        function gtag() {
            dataLayer.push(arguments);
        }
        gtag('js', new Date());
        gtag('config', 'UA-23581568-13');</script>

}