
@model MediaBalanceCMS.Models.VM.ProductCatagoryVM
@{
    ViewData["Title"] = "ProductAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="position: absolute; margin-top: 160px;">

    <a asp-action="CatagoryAdd" class="btn btn-primary" style=" margin-bottom: 20px; margin-left: 20px;">Catagory</a><br />
    <a asp-action="ProductAdd" class="btn btn-primary" style=" margin-bottom: 20px; margin-left: 20px;">Product</a>
</div>

<div class="container">
    <div class="justify-content-center h-100">
        <h1 class="indexTitle" style="margin-bottom: 50px; ">Product Add</h1>

        <div class="card" style=" height: 400px; width: 400px; margin-left: 32%;">
            <div class="card-body">
                <a asp-action="ProductIndex" class="btn btn-secondary" style="margin-bottom:10px; float:right">Back to Product Index</a>

                <form asp-action="ProductAdd" method="post">
                    <div class="input-group form-group">
                        <select style="color: #8b9b8b; width: 100%; height: 45px; border-radius: 5px; padding-left: 16px; " name="CategoryId" class="form-select" aria-label="Default select example">
                            <option selected>Open this select menu</option>
                            @foreach (var item in Model.CategoryVMs)
                            {
                                <option style="color:black" value="@item.Id">@item.Name</option>
                            }

                        </select>
                    </div>
                    <div class="input-group form-group">
                        <input type="text" name="Name" class="form-control" placeholder=" Name">
                    </div>
                    <div class="input-group form-group">
                        <input type="text" name="Price" class="form-control" placeholder="Price">
                    </div>
                    <div class="input-group form-group">
                        <input type="text" name="Whiting" class="form-control" placeholder="Whiting">
                    </div>
                    <div class="input-group form-group">
                        <input type="text" name="Color" class="form-control" placeholder="Color">
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-success float-right ">
                    </div>
                </form>
            </div>
            @if (ViewBag.Modal == 4)
            {
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="alert alert-danger" role="alert">
                            Please Enter Required Category Name Product Name and Product Price
                        </div>
                    </div>
                </div>
                <button id="btn-exampleModalCenter" class="btn d-none" data-toggle="modal" data-target="#exampleModalCenter"></button>
            }
        </div>
    </div>

</div>
@section scripts{
    <script>

        $('#btn-exampleModalCenter').trigger('click');

        setTimeout(() => {
            $("#exampleModalCenter").modal('hide');
        }, 2200);

        window.dataLayer = window.dataLayer || [];
        function gtag() {
            dataLayer.push(arguments);
        }
        gtag('js', new Date());
        gtag('config', 'UA-23581568-13');</script>

}
